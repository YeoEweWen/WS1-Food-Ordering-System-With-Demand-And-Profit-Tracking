{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build all",
            "type": "shell",
            "command": "g++",
            "args": [
                "src/main.cpp",
                // Core
                "src/core/auth.cpp",
                "src/core/config.cpp",
                "src/core/database.cpp",
                "src/core/menu.cpp",
                "src/core/order.cpp",
                "src/core/users.cpp",
                "src/core/validation.cpp",
                // User Interface (UI)

                // Utils
                "src/utils/functions.cpp",

                // Include directory
                "-I", "C:/Program Files/MySQL/MySQL Server 8.0/include",
                "-I", "C:/OpenSSL-Win64/include",
                "-I", "include",
                "-I", "lib",

                // Library directory
                "-L", "C:/Program Files/MySQL/MySQL Server 8.0/lib",
                "-L", "C:/OpenSSL-Win64/lib",

                // Link MySQL library
                "-lmysql",

                // Link OpenSSL library
                "-lssl",
                "-lcrypto",

                // C++ standard
                "-std=c++17",

                // Output file
                "-o", "build/main.exe"
            ],
            "group": "build",
            "problemMatcher": ["$gcc"]
        }
    ]
}
